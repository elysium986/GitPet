--create product
create SEQUENCE SEQ_PRODUCT START WITH 101 INCREMENT BY 1;
CREATE TABLE PRODUCT
(
  ID INTEGER DEFAULT (NEXT VALUE FOR SEQ_PRODUCT) PRIMARY KEY NOT NULL  ,
  PRODUCT_NAME VARCHAR(2147483647) NOT NULL,
  PRODUCT_CODE VARCHAR(2147483647) NOT NULL,
  START_DATE DATE NOT NULL,
  END_DATE DATE,
  DESCRIPTION VARCHAR(2147483647)
);
CREATE UNIQUE INDEX UNIQUE_PRODUCT_CODE_INDEX_1 ON PRODUCT ( PRODUCT_CODE );
CREATE UNIQUE INDEX UNIQUE_PRODUCT_NAME_INDEX_1 ON PRODUCT ( PRODUCT_NAME );

--create operator
create SEQUENCE SEQ_OPERATOR START WITH 101 INCREMENT BY 1;
CREATE TABLE OPERATOR
(
  ID INTEGER DEFAULT (NEXT VALUE FOR SEQ_OPERATOR) PRIMARY KEY NOT NULL,
  OPERATOR_NAME VARCHAR(2147483647) NOT NULL,
  OPERATOR_CODE VARCHAR(2147483647) NOT NULL,
  FK_COUNTRY INTEGER NOT NULL,
  START_DATE DATE NOT NULL,
  UPDATED DATE
  END_DATE DATE
);
CREATE UNIQUE INDEX UNIQUE_OPERATOR_CODE_INDEX_1 ON OPERATOR ( OPERATOR_CODE );
CREATE UNIQUE INDEX UNIQUE_OPERATOR_NAME_INDEX_1 ON OPERATOR ( OPERATOR_NAME );

--create country
create SEQUENCE SEQ_COUNTRY START WITH 101 INCREMENT BY 1;
CREATE TABLE COUNTRY
(
  ID INTEGER DEFAULT (NEXT VALUE FOR SEQ_COUNTRY) PRIMARY KEY NOT NULL,
  COUNTRY_NAME VARCHAR(2147483647) NOT NULL,
  COUNTRY_CODE VARCHAR(2147483647) NOT NULL,
  START_DATE DATE NOT NULL,
  END_DATE DATE
);
CREATE UNIQUE INDEX UNIQUE_COUNTRY_CODE_INDEX_6 ON COUNTRY ( COUNTRY_CODE );
CREATE UNIQUE INDEX UNIQUE_COUNTRY_NAME_INDEX_6 ON COUNTRY ( COUNTRY_NAME );

--OPERATOR_PRODUCT
CREATE TABLE OPERATOR_PRODUCT
(
  FK_OPERATOR INTEGER NOT NULL,
  FK_PRODUCT INTEGER NOT NULL,
  FOREIGN KEY ( FK_OPERATOR ) REFERENCES OPERATOR ( ID ),
  FOREIGN KEY ( FK_PRODUCT ) REFERENCES PRODUCT ( ID )
);
